<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%= render(
    TableComponent.new(
      headers: %w[title author created_at updated_at],
      columns: @books.map { |book|
        [book.title, book.author.name, book.created_at, book.updated_at]
        .map(&:to_s)
      }
    )
  ) %>
</div>
